<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ConversionActivity" >

    <EditText
        android:id="@+id/firstValueEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="numberDecimal" >
        <requestFocus />
        </EditText>

    <Spinner
        android:id="@+id/firstUnitSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/firstValueEditText"
        android:layout_alignStart="@+id/firstValueEditText"
        android:layout_alignRight="@+id/firstValueEditText"
        android:layout_alignEnd="@+id/firstValueEditText"
        android:layout_below="@+id/firstValueEditText" />

    <EditText
        android:id="@+id/secondValueEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/firstUnitSpinner"
        android:layout_alignStart="@+id/firstUnitSpinner"
        android:layout_alignRight="@+id/firstUnitSpinner"
        android:layout_alignEnd="@+id/firstUnitSpinner"
        android:layout_below="@+id/firstUnitSpinner"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Spinner
        android:id="@+id/secondUnitSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/secondValueEditText"
        android:layout_alignStart="@+id/secondValueEditText"
        android:layout_alignRight="@+id/secondValueEditText"
        android:layout_alignEnd="@+id/secondValueEditText"
        android:layout_below="@+id/secondValueEditText" />

</RelativeLayout>
