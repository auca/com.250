<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CurrencyConversionActivity" >

    <EditText
        android:id="@+id/firstCurrencyValueEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Spinner
        android:id="@+id/firstCurrencyUnitSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/firstCurrencyValueEditText"
        android:layout_alignStart="@+id/firstCurrencyValueEditText"
        android:layout_alignRight="@+id/firstCurrencyValueEditText"
        android:layout_alignEnd="@+id/firstCurrencyValueEditText"
        android:layout_below="@+id/firstCurrencyValueEditText" />

    <EditText
        android:id="@+id/secondCurrencyValueEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/firstCurrencyUnitSpinner"
        android:layout_alignStart="@+id/firstCurrencyUnitSpinner"
        android:layout_alignRight="@+id/firstCurrencyUnitSpinner"
        android:layout_alignEnd="@+id/firstCurrencyUnitSpinner"
        android:layout_below="@+id/firstCurrencyUnitSpinner"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Spinner
        android:id="@+id/secondCurrencyUnitSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/secondCurrencyValueEditText"
        android:layout_alignStart="@+id/secondCurrencyValueEditText"
        android:layout_alignRight="@+id/secondCurrencyValueEditText"
        android:layout_alignEnd="@+id/secondCurrencyValueEditText"
        android:layout_below="@+id/secondCurrencyValueEditText" />

    <EditText
        android:id="@+id/currencyRatioValueEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/secondCurrencyUnitSpinner"
        android:layout_alignStart="@+id/secondCurrencyUnitSpinner"
        android:layout_alignRight="@+id/secondCurrencyUnitSpinner"
        android:layout_alignEnd="@+id/secondCurrencyUnitSpinner"
        android:layout_below="@+id/secondCurrencyUnitSpinner"
        android:ems="10"
        android:inputType="numberDecimal" />

</RelativeLayout>